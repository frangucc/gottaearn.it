{
  "name": "gottaearn-admin",
  "version": "1.0.0",
  "description": "GottaEarn.it Admin Tool & API",
  "type": "module",
  "scripts": {
    "dev": "npm run kill-ports && sleep 1 && concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev -- --port 7000",
    "dev:backend": "cd backend && npm run dev",
    "kill-ports": "lsof -ti:7000,9000 | xargs kill -9 2>/dev/null || true",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && npm install",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "cd backend && npm start",
    "db:generate": "cd backend && npx prisma generate",
    "db:push": "cd backend && npx prisma db push",
    "db:studio": "cd backend && npx prisma studio",
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:reset": "cd backend && npx prisma migrate reset",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:api": "jest --testPathPattern=api",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@sentry/node": "^7.100.0",
    "@sentry/profiling-node": "^1.3.0",
    "express-rate-limit": "^7.1.5",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.12",
    "ioredis": "^5.3.2",
    "zod": "^3.22.4",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "winston": "^3.11.0",
    "jsonwebtoken": "^9.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "express-slow-down": "^2.0.1",
    "@auth/core": "^0.34.2",
    "@auth/prisma-adapter": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "@types/bcryptjs": "^2.4.6",
    "next-auth": "5.0.0-beta.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@apollo/client": "^3.8.7",
    "@apollo/server-integration-testsuite": "^4.10.0",
    "graphql-request": "^6.1.0",
    "msw": "^2.0.8",
    "redis-memory-server": "^0.10.0",
    "testcontainers": "^10.2.2",
    "@testcontainers/postgresql": "^10.2.2",
    "@testcontainers/redis": "^10.2.2",
    "nock": "^13.4.0",
    "faker": "^6.6.6",
    "@faker-js/faker": "^8.3.1",
    "cross-env": "^7.0.3"
  },
  "keywords": [
    "admin",
    "rainforest-api",
    "graphql",
    "react",
    "prisma",
    "neon"
  ],
  "author": "GottaEarn.it",
  "license": "MIT"
}
